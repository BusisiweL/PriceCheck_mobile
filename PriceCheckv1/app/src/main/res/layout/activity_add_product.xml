<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reversidesoftwaresolution.pricecheckv1.AddProduct">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/pricelogo"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:onClick="BtnBack"
            android:padding="10dp"
            android:text="Back"/>

        <ImageView
            android:id="@+id/image1V"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.29"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="click"
            android:text="Upload Picture"/>

        <EditText
            android:id="@+id/etProName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/etProDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/etProCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:ems="10"
            android:hint="Category"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/etProPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:ems="10"
            android:hint="Price"
            android:inputType="textPersonName"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cli"
            android:text="Add to Database"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
