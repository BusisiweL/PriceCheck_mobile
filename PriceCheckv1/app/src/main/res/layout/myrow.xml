<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#FDFEFE"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/myrow_Image"
        android:background="#FDFEFE"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/myrow_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"/>

        <TextView
            android:id="@+id/myrow_price"
            android:layout_width="match_parent"
            android:layout_below="@+id/myrow_Text"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="TextView"/>

        <TextView
            android:id="@+id/myrow_category"
            android:layout_width="match_parent"
            android:layout_below="@+id/myrow_price"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="TextView"/>

        <TextView
            android:id="@+id/myrow_description"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_below="@+id/myrow_category"
            android:layout_height="wrap_content"
            android:text="TextView"/>
    </RelativeLayout>
</LinearLayout>